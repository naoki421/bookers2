<div class="container">
  <div class="row">
    <div class="col-4 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <%= f.label :name, "Name", class: "d-block" %>
          <%= f.text_field :name, class: "d-block" %>
        </div>
        <div class="form-group">
          <%= f.label :profile_image, "Image", class: "d-block" %>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "Introduction", class: "d-block" %>
          <%= f.text_area :introduction, class: "d-block" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>