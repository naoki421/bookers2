<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'info', user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
                <%= image_tag @books.user.get_profile_image %>
                <p><%= @books.user.name %></p>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@books) do %>
                <%= @books.title %>
              <% end %>
            </td>
            <td><%= @books.body %></td>
            <td>
            <% if @books.user == current_user %>
              <%= link_to "Edit", edit_book_path(@books), class: "btn btn-success" %>
              <%= link_to "Destroy", book_path(@books), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" %>
            <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
