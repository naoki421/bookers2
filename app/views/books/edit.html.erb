<div class="container">
  <div class="row">
    <div class="col-4 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <%= f.label :title, "Title", class: "d-block" %>
          <%= f.text_field :title, class: "d-block" %>
        </div>
        <div class="form-group">
          <%= f.label :body, "Opinion", class: "d-block" %>
          <%= f.text_area :body, class: "d-block" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
        <%= link_to "Show", book_path(@book.id) %>
        <span>|</span>
        <%= link_to "Back", books_path %>
      <% end %>
    </div>
  </div>
</div>
