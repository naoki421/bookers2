<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-link text-light">
                <%= link_to user_path(current_user) do %>
                  <i class="fas fa-home"></i><span>Home</span>
                <% end %>
              </li>
              <li>
                <a class="nav-link text-light" href="/users"><i class="fas fa-users"></i>Users</a>
              </li>
              <li>
                <a class="nav-link text-light" href="/books"><i class="fas fa-book-open"></i>Books</a>
              </li>
              <li class="nav-link text-light">
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fas  fa-sign-out-alt"></i><span>Log out</span>
                <% end %>
              </li>
            <% else %>
              <li>
                <a class="nav-link text-light" href="/"><i class="fas fa-home"></i>Home</a>
              </li>
              <li>
                <a class="nav-link text-light" href="/homes/about"><i class="fas fa-link"></i>About</a>
              </li>
              <li>
                <a class="nav-link text-light" href="/users/sign_up"><i class="fas fa-user-plus"></i>Sign up</a>
              </li>
              <li>
                <a class="nav-link text-light" href="/users/sign_in"><i class="fas fa-sign-in-alt"></i>Sign in</a>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
